# Build stage
FROM node:18 AS build
WORKDIR /app
COPY package*.json ./
COPY vite.config.* ./
RUN npm install
COPY . .
RUN npm run build

# Production stage (Nginx serves the built files)
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
